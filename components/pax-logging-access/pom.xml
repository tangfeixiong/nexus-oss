<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>nexus-components</artifactId>
    <version>3.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>pax-logging-access</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>
  <packaging>bundle</packaging>

  <dependencies>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-access</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <!--
          Avoid dragging any dependency content into this fragment
          -->
          <excludeDependencies>*</excludeDependencies>
          <instructions>
            <!--
            Merge with logback-access at runtime so its configurator can find our custom Encoder
            -->
            <Fragment-Host>ch.qos.logback.access</Fragment-Host>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
