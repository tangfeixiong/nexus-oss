<?xml version="1.0" encoding="UTF-8"?>
<component-set>
  <components>
    <component>
      <role>org.sonatype.ldaptestsuite.LdapServer</role>
      <implementation>
        org.sonatype.ldaptestsuite.LdapServer
			</implementation>
      <configuration>
        <workingDirectory>
          ${basedir}/target/apache-ds/default/
				</workingDirectory>
        <doDelete>true</doDelete>
        <port>0</port>
        <partitions>
          <partition>
            <name>sonatype</name>
            <suffix>o=sonatype</suffix>
            <indexedAttributes>
              <indexedAttribute>objectClass</indexedAttribute>
              <indexedAttribute>o</indexedAttribute>
            </indexedAttributes>
            <rootEntryClasses>
              <rootEntryClass>top</rootEntryClass>
              <rootEntryClass>organization</rootEntryClass>
            </rootEntryClasses>
            <ldifFile>${test-ldif}</ldifFile>
          </partition>
        </partitions>
      </configuration>
    </component>


    <component>
      <role>org.sonatype.ldaptestsuite.LdapServer</role>
      <implementation>
        org.sonatype.ldaptestsuite.LdapServer
      </implementation>
      <role-hint>backup</role-hint>
      <configuration>
        <workingDirectory>
          ${basedir}/target/apache-ds/backup
        </workingDirectory>
        <doDelete>true</doDelete>
        <port>0</port>
        <partitions>
          <partition>
            <name>sonatype</name>
            <suffix>o=sonatype</suffix>
            <indexedAttributes>
              <indexedAttribute>objectClass</indexedAttribute>
              <indexedAttribute>o</indexedAttribute>
            </indexedAttributes>
            <rootEntryClasses>
              <rootEntryClass>top</rootEntryClass>
              <rootEntryClass>organization</rootEntryClass>
            </rootEntryClasses>
            <ldifFile>${ldapResourcePath}-backup-ldap.ldif</ldifFile>
          </partition>
        </partitions>
      </configuration>
    </component>

    <component>
      <role>org.sonatype.ldaptestsuite.LdapServer</role>
      <implementation>
        org.sonatype.ldaptestsuite.LdapServer
      </implementation>
      <role-hint>second</role-hint>
      <configuration>
        <workingDirectory>
          ${basedir}/target/apache-ds/second
        </workingDirectory>
        <doDelete>true</doDelete>
        <port>0</port>
        <partitions>
          <partition>
            <name>sonatype</name>
            <suffix>o=sonatype</suffix>
            <indexedAttributes>
              <indexedAttribute>objectClass</indexedAttribute>
              <indexedAttribute>o</indexedAttribute>
            </indexedAttributes>
            <rootEntryClasses>
              <rootEntryClass>top</rootEntryClass>
              <rootEntryClass>organization</rootEntryClass>
            </rootEntryClasses>
            <ldifFile>${ldapResourcePath}-second-ldap.ldif</ldifFile>
          </partition>
        </partitions>
      </configuration>
    </component>
  </components>
</component-set>
    